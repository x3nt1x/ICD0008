@page
@model WebApp.Pages.Plan.Index

@{
    ViewData["Title"] = "Home page";
}

<div class="row position-relative">
    <div class="col text-center">
        <h1 class="display-4">DJs</h1>
        <p>Pick DJs to perform.</p>
    </div>
    
    <div class="col position-absolute">
        <div class="input-group w-auto float-end">
            <a href="Plan/Playlist" class="btn btn-dark"><i class="fa fa-music"></i> Compose playlist <i class="fa fa-music"></i></a>
        </div>
    </div>
    
    <div class="col position-absolute mt-5">
        <form>
            <div class="input-group w-auto float-end">
                <div class="form-outline">
                    <input type="search" asp-for="Search" class="form-control" placeholder="search"/>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="grid text-center">
    <div class="row">
        @foreach (var dj in Model.Djs)
        {
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="https://www.seekpng.com/png/detail/110-1100707_person-avatar-placeholder.png" class="card-img-top" alt="DJ">
                    <div class="card-body">
                        <h5 class="card-title">@dj.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Price: @dj.Price €</h6>

                        <form method="post">
                            <input type="hidden" name="id" value="@dj.Id"/>
                            
                            @if (dj.Performs)
                            {
                                <input class="btn btn-danger" type="submit" value="Remove from event"/>
                            }
                            else
                            {
                                <input class="btn btn-primary" type="submit" value="Add to event"/>
                            }
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>