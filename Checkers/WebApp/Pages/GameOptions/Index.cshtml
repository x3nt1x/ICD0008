@page
@model IndexModel

@{
    ViewData["Title"] = "Options";
}

<h1>Options</h1>

<div class="input-inline">
    <div class="input-group w-auto float-start">
        <a href="GameOptions/Create" class="btn btn-primary">Create New</a>
    </div>

    <form>
        <div class="input-group w-auto float-end">
            <div class="form-outline">
                <input type="search" asp-for="Search" class="form-control" placeholder="search"/>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </form>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameOptions[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameOptions[0].Width)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameOptions[0].Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameOptions[0].StartingPlayer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameOptions[0].HighlightMoves)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameOptions[0].Multiplayer)
        </th>
        <th></th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model.GameOptions)
    {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.StartingPlayer)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.HighlightMoves)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Multiplayer)
            </td>
            <td class="align-middle">
                <div class="btn-group">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm me-1">Edit Name</a>
            
                    <form method="post">
                        <input type="hidden" name="id" value="@item.Id"/>
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm"/>
                    </form>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>