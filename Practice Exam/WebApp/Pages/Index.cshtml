@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row position-relative">
    <div class="col text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Choose pizzas and add them to cart.</p>
    </div>
    
    <div class="col position-absolute">
        <div class="input-group w-auto float-end">
            <a href="Purchase/Index" class="btn btn-dark">Open cart <i class="fa fa-shopping-cart"></i></a>
        </div>
    </div>
    
    <div class="col position-absolute mt-5">
        <form>
            <div class="input-group w-auto float-end">
                <div class="form-outline">
                    <input type="search" asp-for="Search" class="form-control" placeholder="search"/>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="grid text-center">
    <div class="row">
        @foreach (var pizza in Model.Pizzas)
        {
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="https://api.lorem.space/image/pizza?w=800&h=800" class="card-img-top" alt="Pizza">
                    <div class="card-body">
                        <h5 class="card-title">@pizza.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Category: @pizza.Category?.Name</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Price: @pizza.Price €</h6>
                        <p class="card-text">@pizza.Description</p>
                        
                        <form method="post">
                            <input type="hidden" name="id" value="@pizza.Id"/>
                            <input class="btn btn-primary" type="submit" value="Add to cart"/>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>